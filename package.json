{
    "name": "ppa-django",
    "description": "Django web application for the Princeton Prosody Archive",
    "author": "The Center for Digital Humanities at Princeton <cdhdevteam@princeton.edu>",
    "license": "Apache-2.0",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/Princeton-CDH/ppa-django.git"
    },
    "scripts": {
        "dev": "webpack-dev-server --progress --hot --inline --env.maps",
        "dev:semantic": "gulp --gulpfile sitemedia/semantic/gulpfile.js",
        "start": "npm run dev",
        "test": "npm run test:unit && npm run test:a11y",
        "test:unit": "karma start --single-run && jest --collectCoverage",
        "test:a11y": "pa11y-ci --sitemap http://localhost:8000/sitemap-pages.xml",
        "build": "npm run build:prod && npm run build:semantic",
        "build:qa": "NODE_ENV=production webpack --env.maps",
        "build:prod": "NODE_ENV=production webpack --env",
        "build:semantic": "gulp --gulpfile sitemedia/semantic/gulpfile.js build"
    },
    "dependencies": {
        "fomantic-ui": "^2.8.7",
        "parallax-js": "^3.1.0",
        "rxjs": "^6.6.7"
    },
    "devDependencies": {
        "@babel/core": "^7.14.2",
        "@babel/preset-env": "^7.14.2",
        "@types/jest": "^24.9.1",
        "@types/jquery": "^3.5.5",
        "@types/node": "^11.15.54",
        "@types/semantic-ui": "^2.2.7",
        "autoprefixer": "^10.2.5",
        "awesome-typescript-loader": "^5.2.1",
        "babel-loader": "^8.2.2",
        "clean-webpack-plugin": "^1.0.1",
        "core-js": "^3.12.1",
        "css-loader": "3.6.0",
        "file-loader": "^3.0.1",
        "gulp": "^4.0.2",
        "gulp-help": "^1.6.1",
        "jasmine-core": "^3.7.1",
        "jasmine-jquery": "^2.1.1",
        "jest": "^26.6.3",
        "karma": "^6.3.2",
        "karma-chrome-launcher": "^2.2.0",
        "karma-firefox-launcher": "^1.3.0",
        "karma-jasmine": "^1.1.2",
        "karma-spec-reporter": "^0.0.32",
        "karma-webpack": "^5.0.0",
        "mini-css-extract-plugin": "^0.5.0",
        "node-sass": "^4.14.1",
        "node-sass-glob-importer": "^5.3.2",
        "optimize-css-assets-webpack-plugin": "^6.0.0",
        "pa11y-ci": "^2.4.1",
        "postcss": "^8.2.15",
        "postcss-loader": "^4.3.0",
        "request": "^2.88.2",
        "sass-loader": "^7.3.1",
        "source-map-loader": "^0.2.4",
        "style-loader": "^0.23.1",
        "terser-webpack-plugin": "^1.4.5",
        "ts-jest": "^26.5.6",
        "typescript": "^3.9.9",
        "webpack": "^5.37.0",
        "webpack-bundle-tracker": "^1.0.0",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.2",
        "whatwg-fetch": "^3.6.2"
    }
}
