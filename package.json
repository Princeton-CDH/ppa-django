{
    "name": "ppa-django",
    "description": "Django web application for the Princeton Prosody Archive",
    "author": "The Center for Digital Humanities at Princeton <cdhdevteam@princeton.edu>",
    "license": "Apache-2.0",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/Princeton-CDH/ppa-django.git"
    },
    "scripts": {
        "dev": "webpack-dev-server --progress --hot --inline --env.maps",
        "dev:semantic": "gulp --gulpfile sitemedia/semantic/gulpfile.js",
        "start": "npm run dev",
        "test": "npm run test:unit && npm run test:a11y",
        "test:unit": "karma start --single-run && jest --collectCoverage",
        "test:a11y": "pa11y-ci --sitemap http://localhost:8000/sitemap-pages.xml",
        "build": "npm run build:prod && npm run build:semantic",
        "build:qa": "NODE_ENV=production webpack --env.maps",
        "build:prod": "NODE_ENV=production webpack --env",
        "build:semantic": "gulp --gulpfile sitemedia/semantic/gulpfile.js build"
    },
    "dependencies": {
        "parallax-js": "^3.1.0",
        "rxjs": "^6.1.0",
        "semantic-ui": "^2.4.2"
    },
    "devDependencies": {
        "@babel/core": "^7.4.0",
        "@babel/preset-env": "^7.4.2",
        "@types/jest": "^24.0.11",
        "@types/jquery": "^3.3.29",
        "@types/node": "^11.13.4",
        "@types/semantic-ui": "^2.2.7",
        "autoprefixer": "^9.4.7",
        "awesome-typescript-loader": "^5.2.1",
        "babel-loader": "^8.0.5",
        "clean-webpack-plugin": "^1.0.1",
        "core-js": "^3.0.0",
        "css-loader": "^2.1.0",
        "file-loader": "^3.0.1",
        "gulp": "^3",
        "jasmine-core": "^3.1.0",
        "jasmine-jquery": "^2.1.1",
        "jest": "^24.7.0",
        "karma": "^4.0.1",
        "karma-chrome-launcher": "^2.2.0",
        "karma-firefox-launcher": "^1.1.0",
        "karma-jasmine": "^1.1.2",
        "karma-spec-reporter": "^0.0.32",
        "karma-webpack": "^4.0.0-rc.6",
        "mini-css-extract-plugin": "^0.5.0",
        "node-sass": "^4.13.1",
        "node-sass-glob-importer": "^5.3.0",
        "optimize-css-assets-webpack-plugin": "^5.0.1",
        "pa11y-ci": "^2.1.1",
        "postcss-loader": "^3.0.0",
        "request": "^2.88.0",
        "sass-loader": "^7.1.0",
        "source-map-loader": "^0.2.4",
        "style-loader": "^0.23.1",
        "terser-webpack-plugin": "^1.2.2",
        "ts-jest": "^24.0.1",
        "typescript": "^3.4.1",
        "webpack": "^4.29.3",
        "webpack-bundle-tracker": "^0.4.2-beta",
        "webpack-cli": "^3.2.3",
        "webpack-dev-server": "^3.1.14",
        "whatwg-fetch": "^3.0.0"
    }
}
